<% @title = 'アカウント情報' %>
<h1><%= @title %></h1>

<div class="main">
  <div class="links">
    <%= link_to '編集ページへ', :edit_customer_account %>
  </div>
</div>

<div class="table-wrapper"> 
  <div class="table-wrapper">
    <div class="links">
      <%= link_to 'トップ画面へ戻る', :customer_root %>
    </div>
  </div>
  
  <table class="attributes">
    <tr><th colspan="2">基本情報</th></tr>
    <% p1 = CustomerPresenter.new(@customer, self) %>
    <tr><th>氏名</th><td><%= p1.full_name %></td></tr>
    <tr><th>フリガナ</th><td><%= p1.full_name_kana %></td></tr>
    <tr><th>email</th><td><%= p1.email %></td></tr>
    <tr><th>生年月日</th><td class="date"><%= p1.birthday %></td></tr>
    <tr><th>性別</th><td><%= p1.gender %></td></tr>
    <tr><th>ニックネーム</th><td><%= p1.nickname %></td></tr>
    <tr><th>紹介者</th><td><%= p1.sponsor1 %></td></tr>
    <tr><th>登録日時</th><td class="date"><%= p1.created_at %></td></tr>
    <tr><th>更新日時</th><td class="date"><%= p1.updated_at %></td></tr>
    <tr><th>個人電話番号(1)</th><td><%= p1.personal_phones[0] %></td></tr>
    <tr><th>個人電話番号(2)</th><td><%= p1.personal_phones[1] %></td></tr>
    <% if @customer.home_address %>
      <% p2 = AddressPresenter.new(@customer.home_address, self) %>
      <tr><th colspan="2">自宅住所</th></tr>
      <tr><th>郵便番号</th><td><%= p2.postal_code %></td></tr>
      <tr><th>都道府県</th><td><%= p2.prefecture %></td></tr>
      <tr><th>市区町村</th><td><%= p2.city %></td></tr>
      <tr><th>町域</th><td><%= p2.address1 %></td></tr>
      <tr><th>番地等</th><td><%= p2.address3 %></td></tr>
      <tr><th>建物名、部屋番号等</th><td><%= p2.address2 %></td></tr>
      <tr><th>自宅電話番号(1)</th><td><%= p2.phones[0] %></td></tr>
      <tr><th>自宅電話番号(2)</th><td><%= p2.phones[1] %></td></tr>
    <% end %>
    <% if @customer.bank %>
      <% p3 = BankPresenter.new(@customer.bank, self) %>
      <tr><th colspan="2">入金口座</th></tr>
      <tr><th>銀行名</th><td><%= p3.bk_name %></td></tr>
      <tr><th>支店名</th><td><%= p3.office %></td></tr>
      <tr><th>口座番号</th><td><%= p3.account %></td></tr>
      <tr><th>口座名義</th><td><%= @acc_name %></td></tr>
      <tr><th>口座名義（カナ）</th><td><%= @acc_name_kana %></td></tr>
    <% end %>
    
    <% if @customer.register %>
      <% p3 = RegisterPresenter.new(@customer.register, self) %>
      <tr><th colspan="2">利用料金入金状況</th></tr>
      <tr><th>１月</th><td><%= p3.rg_1 %></td></tr>
      <tr><th>２月</th><td><%= p3.rg_2 %></td></tr>
      <tr><th>３月</th><td><%= p3.rg_3 %></td></tr>
      <tr><th>４月</th><td><%= p3.rg_4 %></td></tr>
      <tr><th>５月</th><td><%= p3.rg_5 %></td></tr>
      <tr><th>６月</th><td><%= p3.rg_6 %></td></tr>
      <tr><th>７月</th><td><%= p3.rg_7 %></td></tr>
      <tr><th>８月</th><td><%= p3.rg_8 %></td></tr>
      <tr><th>９月</th><td><%= p3.rg_9 %></td></tr>
      <tr><th>１０月</th><td><%= p3.rg_10 %></td></tr>
      <tr><th>１１月</th><td><%= p3.rg_11 %></td></tr>
      <tr><th>１２月</th><td><%= p3.rg_12 %></td></tr>
    <% end %>
    
    <% if @customer.special %>
      <% p9 = SpecialPresenter.new(@customer.special, self) %>
      <tr><th colspan="2"><strong>年間獲得タイトル</strong></th></tr>
      <tr><th>ベーシック</th><td><%= p9.basic %></td></tr>
      <tr><th>クリスタル</th><td><%= p9.crystal %></td></tr>
      <tr><th>シルバーベーシック</th><td><%= p9.silver %></td></tr>
      <tr><th>ゴールドベーシック</th><td><%= p9.gold %></td></tr>
      <tr><th>プラチナベーシック</th><td><%= p9.platinum %></td></tr>
      <tr><th>ペガサス</th><td><%= p9.pegasus %></td></tr>
      <tr><th>フェニックス</th><td><%= p9.phoenix %></td></tr>
      <tr><th>クイーン</th><td><%= p9.queen %></td></tr>
      <tr><th>キング</th><td><%= p9.king %></td></tr>
      <tr><th>プレジデント</th><td><%= p9.president %></td></tr>
    <% end %>
  </table>
</div>

<div class="table-wrapper">
  <div class="links">
    <%= link_to 'トップ画面へ戻る', :customer_root %>
  </div>
</div>
