    <% end %>
    
    <% if may == "在籍" %>
      <tr><th>5月</th><td><%= p4.rg_5 %></td></tr>
    <% else %>
      <tr><th>5月</th><td><strong><%= p4.rg_5 %></strong></td></tr>
    <% end %>
    
    <% if june == "在籍" %>
      <tr><th>6月</th><td><%= p4.rg_6 %></td></tr>
    <% else %>
      <tr><th>6月</th><td><strong><%= p4.rg_6 %></strong></td></tr>
    <% end %>
    
    <% if june == "在籍" %>
      <tr><th>7月</th><td><%= p4.rg_7 %></td></tr>
    <% else %>
      <tr><th>7月</th><td><strong><%= p4.rg_7 %></strong></td></tr>
    <% end %>
    
    <% if august == "在籍" %>
      <tr><th>8月</th><td><%= p4.rg_8 %></td></tr>
    <% else %>
      <tr><th>8月</th><td><strong><%= p4.rg_8 %></strong></td></tr>
    <% end %>
    
    <% if september == "在籍" %>
      <tr><th>9月</th><td><%= p4.rg_9 %></td></tr>
    <% else %>
    <tr><th>9月</th><td><strong><%= p4.rg_9 %></strong></td></tr>
    <% end %>
    
    <% if october == "在籍" %>
      <tr><th>10月</th><td><%= p4.rg_10 %></td></tr>
