<% if @quarter1 == 4 %>
  <%= f.fields_for :one, f.object.one do |ff| %>
    <%= markup do |m|
      p = confirming ? ConfirminOneFormPresenter.new(ff,self) :  OneFormPresenter.new(ff, self)
      p.with_options(required: true) do |q|
        m << q.drop_down_list_block(:transfer_c_4, '４クオーター送金', One::TRANSFER)
      end
    end %>
  <% end %>
<% else %>
  <%= f.fields_for :twenty_two, f.object.twenty_two do |ff| %>
    <% if @quarter1 == 1 %>
      <%= markup do |m|
        p = confirming ? ConfirminTwentyTwoFormPresenter.new(ff,self) :  TwentyTwoFormPresenter.new(ff, self)
        p.with_options(required: true) do |q|
          m << q.drop_down_list_block(:transfer_c_1, '1クオーターボーナス送金', TwentyTwo::TRANSFER)
        end
      end %>
    <% elsif @quarter1 == 2 %>
      <%= markup do |m|
        p = confirming ? ConfirminTwentyTwoFormPresenter.new(ff,self) :  TwentyTwoFormPresenter.new(ff, self)
        p.with_options(required: true) do |q|
          m << q.drop_down_list_block(:transfer_c_2, '２クオーターボーナス送金', TwentyTwo::TRANSFER)
        end
      end %>
    <% else %>
      <%= markup do |m|
        p = confirming ? ConfirminTwentyTwoFormPresenter.new(ff,self) :  TwentyTwoFormPresenter.new(ff, self)
        p.with_options(required: true) do |q|
          m << q.drop_down_list_block(:transfer_c_3, '３クオーターボーナス送金', TwentyTwo::TRANSFER)
        end
      end %>
    <% end %>
  <% end %>
<% end %>